    <!--<conversionPattern value="%date [%thread] %-5level %logger [%property] - %message%newline -Line: %location%newline -PC: %machine%newline -User:%username%newline" />-->
    <!--</layout>-->
    <!--</appender>-->
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <param name="LogName" value="Application" />
      <param name="ApplicationName" value="GAS Application" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property] - %message%newline -Line: %location%newline --PC: %machine%newline -User:%username%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="LogFileAppender" />
      <!--<appender-ref ref="AdoNetAppender_SqlServer" />-->
    </root>
    <logger name="GAS">
      <level value="All" />
      <appender-ref ref="AdoNetAppender_SqlServer" />
      <!--appender-ref ref="EventLogAppender" />-->
      <!--<appender-ref ref="LogFileAppender" />-->
      <!--appender-ref ref="SmtpAppender" />-->
    </logger>
  </log4net>
  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="textWriterTraceListener" type="System.Diagnostics.TextWriterTraceListener" initializeData="C:\temp\log4net.log" />
      </listeners>
    </trace>
  </system.diagnostics>
  <connectionStrings>
    <add name="ATMSConnectionString" connectionString="Data Source=localhost;Initial Catalog=ATMS;Integrated Security=True;Connect Timeout=0"
      providerName="System.Data.SqlClient" />
    <add name="RRDM4ATMsWin.Properties.Settings.ATMSConnectionString"
      connectionString="Data Source=localhost;Initial Catalog=ATMS;Integrated Security=True;Connect Timeout=30"
      providerName="System.Data.SqlClient" />
  </connectionStrings>
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v4.0" />
  </startup>
  <system.web>
